<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_transparent">

    <LinearLayout
        android:id="@+id/ll_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/item_popupwindows_find"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/bt_nobgd"
                android:text="查询"
                android:textColor="#585858"
                android:textSize="@dimen/font_size_14" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="80dp"
            android:background="#f2f2f2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/item_popupwindows_scan"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bt_nobgd"
                android:text="扫一扫"
                android:textColor="#585858"
                android:textSize="@dimen/font_size_14" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="80dp"
            android:background="#f2f2f2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/item_popupwindows_sign"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bt_nobgd"
                android:text="签到签退"
                android:textColor="#585858"
                android:textSize="@dimen/font_size_14" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="80dp"
            android:background="#f2f2f2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/item_popupwindows_upload"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bt_nobgd"
                android:text="批量上传"
                android:textColor="#585858"
                android:textSize="@dimen/font_size_14" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="80dp"
            android:background="#f2f2f2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/item_popupwindows_logout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bt_nobgd"
                android:text="退出登录"
                android:textColor="#585858"
                android:textSize="@dimen/font_size_14" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#f3f3f3" />

        <Button
            android:id="@+id/item_popupwindows_cancel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bt_nobgd"
            android:text="取消"
            android:textColor="#585858"
            android:textSize="@dimen/font_size_14" />
    </LinearLayout>

</RelativeLayout>