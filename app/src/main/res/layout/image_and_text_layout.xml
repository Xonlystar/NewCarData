<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/image_and_text_image"
        android:layout_width="@dimen/main_bottom_bar_image_w"
        android:layout_height="@dimen/main_bottom_bar_image_h"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/image_and_text_text"
        android:layout_width="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@drawable/main_bottom_bar_text_color_selector"
        android:layout_height="wrap_content" />

</merge>