<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/lightgrey">

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/line_Top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/msg_rwdh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="任务单号："
            android:textColor="@color/gray"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/rwdh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/msg_rwdh"
            android:gravity="center"
            android:text="RW2016042603"
            android:textColor="@color/gray"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/rwsj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/gray"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/line_Top"
        android:background="@drawable/wave_line">

        <TextView
            android:id="@+id/text_clsbm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:right="@+id/car_num_show"
            android:singleLine="true"
            android:text="车辆识别码:"
            android:textSize="@dimen/font_size_14"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/clsbm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/text_clsbm"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/text_clsbm"
            android:layout_toRightOf="@+id/text_clsbm"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/text_cx"
            android:textSize="@dimen/font_size_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/clsbm"
            android:layout_toStartOf="@+id/clsbm"
            android:gravity="center"
            android:right="@+id/car_num_show"
            android:singleLine="true"
            android:text="车型:"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/cx"
            style="@style/car_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/text_cx"
            android:layout_alignLeft="@+id/clsbm"
            android:layout_alignStart="@+id/clsbm"
            android:gravity="center"
            android:singleLine="true"
            android:text="暂无" />


        <TextView
            android:id="@+id/text_pztt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:right="@+id/car_num_show"
            android:singleLine="true"
            android:textSize="@dimen/font_size_14"
            android:text="状态:"
            android:textColor="@color/gray"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/clsbm"
            android:layout_toStartOf="@+id/clsbm"/>

        <TextView
            android:id="@+id/pzzt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/font_size_14"
            android:singleLine="true"
            android:textColor="@color/red"
            android:layout_alignTop="@+id/text_pztt"
            android:layout_alignLeft="@+id/clsbm"
            android:layout_alignStart="@+id/clsbm"/>

        <Button
            android:visibility="gone"
            android:id="@+id/btn_add"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/ToolBar_bg"
            android:textSize="@dimen/font_size_14"
            android:text="去拍照" />

        <View
            android:visibility="gone"
            android:layout_width="1dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/btn_add"
            android:background="@color/lightgrey" />
    </RelativeLayout>
</RelativeLayout>